@model IEnumerable<Book>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-black">Book List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Book" asp-action="Create" class="btn btn-dark">Add New Book</a>
        </div>
    </div>
    <br /><br />


    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Book Name
                </th>
                <th>
                    Book Author
                </th>
                <th>
                    Price
                </th>
                <th>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="10%">
                        @obj.ID
                    </td>
                    <td width="10%">
                        @obj.Name
                    </td>
                    <td width="10%">
                        @obj.Author
                    </td>
                    <td width="10%">
                        @obj.Price
                    </td>
                    <td width="10%">
                        <div class="w-75 btn-grp" role="group">
                            <a asp-controller="Book" asp-action="Edit" asp-route-id="@obj.ID" class="btn btn-dark">Edit</a>
                            <a asp-controller="Book" asp-action="Delete" asp-route-id="@obj.ID" class="btn btn-dark">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

