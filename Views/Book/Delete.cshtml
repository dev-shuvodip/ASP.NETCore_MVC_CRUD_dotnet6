@model Book

<form method="post" asp-action="DeleteBook">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-dark">Delete Book</h2>
            <hr />
        </div>
        <input asp-for="ID" hidden />
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" disabled/>
        </div>
        <div class="mb-3">
            <label asp-for="Author"></label>
            <input asp-for="Author" class="form-control" disabled/>
        </div>
        <div class="mb-3">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" disabled/>
        </div>
        <br />
        <button type="submit" class="btn btn-dark" style="width:150px">Delete</button>
        <a asp-controller="Book" asp-action="Index" class="btn btn-dark" style="width:150px">
            Back to list
        </a>
    </div>
</form>